# Redis connection (choose either URL or host/port authentication)
REDIS_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_TLS=false

# Shared cache defaults
REDIS_DEFAULT_TTL_SECONDS=300

# Remote image caching controls
REDIS_IMAGE_TTL_SECONDS=86400
REDIS_IMAGE_MAX_BYTES=5242880
REDIS_IMAGE_CACHE_PREFIX=ppsi-image
REDIS_IMAGE_FETCH_TIMEOUT_MS=10000
REDIS_IMAGE_CACHE_BYPASS=false
REDIS_IMAGE_USER_AGENT=

# Front-end toggles for image caching
NEXT_PUBLIC_ENABLE_IMAGE_CACHE=true
NEXT_PUBLIC_IMAGE_CACHE_ENDPOINT=/api/cache-image
NEXT_PUBLIC_IMAGE_CACHE_ALLOW_HOSTS=
NEXT_PUBLIC_IMAGE_CACHE_STRICT_HOST_CHECK=true
